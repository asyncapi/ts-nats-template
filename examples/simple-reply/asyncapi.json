{
	"asyncapi": "2.2.0",
	"info": {
		"title": "Streetlight",
		"version": "1.0.0"
	},
	"defaultContentType": "json",
	"channels": {
		"streetlight/{streetlight_id}/command/turnon": {
			"description": "Channel for the turn on command which should turn on the streetlight",
			"parameters": {
				"streetlight_id": {
					"description": "The ID of the streetlight",
					"schema": {
						"type": "string"
					}
				}
			},
			"subscribe": {
				"message": {
					"payload": {
						"$ref": "#/components/schemas/GeneralReply"
					}
				}
			},
			"publish": {
				"message": {
					"name": "turnonCommand",
					"payload": {
						"x-parser-schema-id": "TurnOnRequest",
						"type": "object",
						"required": ["lumen"],
						"properties": {
							"lumen": {
								"type": "integer",
								"description": "How bright should the light be."
							}
						}
					}
				}
			}, 
			"bindings": {
				"nats": {
					"is": "requestReply",
					"requestReply": {
						"is": "replier"
					},
					"bindingVersion": "0.1.0"
				}
			}
		}
	},
	"components": {
		"schemas": {
			"GeneralReply": {
				"type": "object",
				"x-parser-schema-id": "GeneralReply",
				"properties": {
					"status_code": {
						"type": "integer"
					},
					"status_message": {
						"type": "string"
					}
				}
			}
		}
	}
}
